<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ������� ������ Bootstrap ��� WPF -->
    
    <!-- Border Width (������� ������) -->
    <Thickness x:Key="Border.0">0</Thickness>
    <Thickness x:Key="Border.1">1</Thickness>
    <Thickness x:Key="Border.2">2</Thickness>
    <Thickness x:Key="Border.3">3</Thickness>
    <Thickness x:Key="Border.4">4</Thickness>
    <Thickness x:Key="Border.5">5</Thickness>
    
    <!-- Border �� �������� -->
    <Thickness x:Key="Border.Top">0,1,0,0</Thickness>
    <Thickness x:Key="Border.Bottom">0,0,0,1</Thickness>
    <Thickness x:Key="Border.Left">1,0,0,0</Thickness>
    <Thickness x:Key="Border.Right">0,0,1,0</Thickness>
    
    <!-- Border Radius (���������� �����) -->
    <CornerRadius x:Key="Rounded.0">0</CornerRadius>
    <CornerRadius x:Key="Rounded.1">2</CornerRadius>
    <CornerRadius x:Key="Rounded.2">4</CornerRadius>
    <CornerRadius x:Key="Rounded.3">8</CornerRadius>
    <CornerRadius x:Key="Rounded.4">12</CornerRadius>
    <CornerRadius x:Key="Rounded.5">16</CornerRadius>
    <CornerRadius x:Key="Rounded.Circle">9999</CornerRadius>
    <CornerRadius x:Key="Rounded.Pill">50</CornerRadius>
    
    <!-- ���������� �� ��������� ����� -->
    <CornerRadius x:Key="Rounded.Top">4,4,0,0</CornerRadius>
    <CornerRadius x:Key="Rounded.Bottom">0,0,4,4</CornerRadius>
    <CornerRadius x:Key="Rounded.Left">4,0,0,4</CornerRadius>
    <CornerRadius x:Key="Rounded.Right">0,4,4,0</CornerRadius>
    
    <!-- ����� ������ � ������� -->
    <Style x:Key="Border.Style" TargetType="Border">
        <Setter Property="BorderThickness" Value="{StaticResource Border.1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.2}"/>
    </Style>
    
    <Style x:Key="Border.Primary" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
    </Style>
    
    <Style x:Key="Border.Secondary" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Secondary}"/>
    </Style>
    
    <Style x:Key="Border.Success" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Success}"/>
    </Style>
    
    <Style x:Key="Border.Danger" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Danger}"/>
    </Style>
    
    <Style x:Key="Border.Warning" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Warning}"/>
    </Style>
    
    <Style x:Key="Border.Info" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Info}"/>
    </Style>
    
    <Style x:Key="Border.Light" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Light}"/>
    </Style>
    
    <Style x:Key="Border.Dark" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Dark}"/>
    </Style>
    
    <Style x:Key="Border.White" TargetType="Border" BasedOn="{StaticResource Border.Style}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.White}"/>
    </Style>
    
    <!-- ����� ��� ������ -->
    <Style x:Key="Border.None" TargetType="Border">
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- ����� �� ������������ -->
    <Style x:Key="Rounded" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.2}"/>
    </Style>
    
    <Style x:Key="Rounded.Small" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.1}"/>
    </Style>
    
    <Style x:Key="Rounded.Large" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.3}"/>
    </Style>
    
    <Style x:Key="Rounded.XLarge" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.5}"/>
    </Style>
    
    <Style x:Key="Rounded.Circle.Style" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.Circle}"/>
    </Style>
    
    <Style x:Key="Rounded.Pill.Style" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.Pill}"/>
    </Style>
    
    <!-- Divider (�����������) -->
    <Style x:Key="Divider.Horizontal" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <Style x:Key="Divider.Vertical" TargetType="Border">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Background" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="Margin" Value="8,0"/>
    </Style>
    
</ResourceDictionary>
