<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Shadows.xaml"/>
        <ResourceDictionary Source="Borders.xaml"/>
        <ResourceDictionary Source="Spacing.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ���������� Bootstrap ��� WPF -->
    
    <!-- Alert (�����������) -->
    <Style x:Key="Alert" TargetType="Border">
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
        <Setter Property="Margin" Value="{StaticResource MB.3}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.2}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Border.1}"/>
    </Style>
    
    <Style x:Key="Alert.Primary" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Blue.100}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Blue.200}"/>
    </Style>
    
    <Style x:Key="Alert.Secondary" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Gray.200}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
    </Style>
    
    <Style x:Key="Alert.Success" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Green.100}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Green.200}"/>
    </Style>
    
    <Style x:Key="Alert.Danger" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Red.100}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Red.200}"/>
    </Style>
    
    <Style x:Key="Alert.Warning" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Yellow.100}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Yellow.200}"/>
    </Style>
    
    <Style x:Key="Alert.Info" TargetType="Border" BasedOn="{StaticResource Alert}">
        <Setter Property="Background" Value="{StaticResource Brush.Cyan.100}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Cyan.200}"/>
    </Style>
    
    <!-- Card (��������) -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Border.1}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.2}"/>
        <Setter Property="Effect" Value="{StaticResource Shadow.Small}"/>
    </Style>
    
    <Style x:Key="Card.Header" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Gray.100}"/>
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    
    <Style x:Key="Card.Body" TargetType="Border">
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
    </Style>
    
    <Style x:Key="Card.Footer" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Gray.100}"/>
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="0,1,0,0"/>
    </Style>
    
    <!-- Badge (������) -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.1}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style x:Key="Badge.Primary" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
    </Style>
    
    <Style x:Key="Badge.Secondary" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Secondary}"/>
    </Style>
    
    <Style x:Key="Badge.Success" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Success}"/>
    </Style>
    
    <Style x:Key="Badge.Danger" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Danger}"/>
    </Style>
    
    <Style x:Key="Badge.Warning" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Warning}"/>
    </Style>
    
    <Style x:Key="Badge.Info" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Info}"/>
    </Style>
    
    <Style x:Key="Badge.Light" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Light}"/>
    </Style>
    
    <Style x:Key="Badge.Dark" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource Brush.Dark}"/>
    </Style>
    
    <!-- Badge Pill (���������� ������) -->
    <Style x:Key="Badge.Pill" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.Pill}"/>
        <Setter Property="Padding" Value="8,4"/>
    </Style>
    
    <!-- List Group (������ �������) -->
    <Style x:Key="ListGroup" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Border.1}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.2}"/>
    </Style>
    
    <Style x:Key="ListGroup.Item" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.White}"/>
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>
    
    <Style x:Key="ListGroup.Item.Active" TargetType="Border" BasedOn="{StaticResource ListGroup.Item}">
        <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
    </Style>
    
    <!-- Progress Bar (�������� ���) -->
    <Style x:Key="Progress" TargetType="ProgressBar">
        <Setter Property="Height" Value="16"/>
        <Setter Property="Background" Value="{StaticResource Brush.Gray.200}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <Border x:Name="PART_Track">
                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Left"/>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Spinner (��������) -->
    <Style x:Key="Spinner" TargetType="Border">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="20"/>
    </Style>
    
    <!-- Tooltip (���������) -->
    <Style x:Key="Tooltip" TargetType="ToolTip">
        <Setter Property="Background" Value="{StaticResource Brush.Dark}"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.White}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToolTip">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Modal/Dialog (��������� ����) -->
    <Style x:Key="Modal" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.White}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Gray.300}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Border.1}"/>
        <Setter Property="CornerRadius" Value="{StaticResource Rounded.3}"/>
        <Setter Property="Effect" Value="{StaticResource Shadow.Large}"/>
        <Setter Property="Padding" Value="{StaticResource P.4}"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="MaxWidth" Value="500"/>
    </Style>
    
    <!-- Navbar (������������� ������) -->
    <Style x:Key="Navbar" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.Light}"/>
        <Setter Property="Padding" Value="{StaticResource P.3}"/>
        <Setter Property="Effect" Value="{StaticResource Shadow.Small}"/>
    </Style>
    
    <Style x:Key="Navbar.Dark" TargetType="Border" BasedOn="{StaticResource Navbar}">
        <Setter Property="Background" Value="{StaticResource Brush.Dark}"/>
    </Style>
    
</ResourceDictionary>
