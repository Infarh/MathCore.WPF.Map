<Window x:Class="MathCore.WPF.Map.TestWPF.BootstrapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Bootstrap Styles Demo" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource Brush.Primary}" 
                Padding="{StaticResource P.4}">
            <StackPanel>
                <TextBlock Text="Bootstrap 5 Styles for WPF" 
                          Foreground="{StaticResource Brush.White}"
                          FontSize="28"
                          FontWeight="Bold"/>
                <TextBlock Text="Interactive Style Guide and Component Showcase" 
                          Foreground="{StaticResource Brush.White}"
                          FontSize="14"
                          Opacity="0.9"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- TabControl with demos -->
        <TabControl Grid.Row="1" 
                    Margin="{StaticResource M.3}"
                    TabStripPlacement="Left">
            
            <TabItem Header="Colors">
                <Frame x:Name="ColorsFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Typography">
                <Frame x:Name="TypographyFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Buttons">
                <Frame x:Name="ButtonsFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Forms">
                <Frame x:Name="FormsFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Grid System">
                <Frame x:Name="GridFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Spacing">
                <Frame x:Name="SpacingFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Borders">
                <Frame x:Name="BordersFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
            <TabItem Header="Components">
                <Frame x:Name="ComponentsFrame" 
                       NavigationUIVisibility="Hidden"/>
            </TabItem>
            
        </TabControl>
        
    </Grid>
    
</Window>
