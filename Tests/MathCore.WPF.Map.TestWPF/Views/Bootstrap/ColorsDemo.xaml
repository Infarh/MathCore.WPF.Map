<Page x:Class="MathCore.WPF.Map.TestWPF.Views.Bootstrap.ColorsDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Colors">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{StaticResource P.4}">
            
            <TextBlock Style="{StaticResource Text.H2}" Text="Bootstrap Colors"/>
            <TextBlock Style="{StaticResource Text.Muted}" 
                      Text="Color palette based on Bootstrap 5 design system"
                      Margin="{StaticResource MB.4}"/>
            
            <!-- Theme Colors -->
            <TextBlock Style="{StaticResource Text.H4}" Text="Theme Colors" Margin="{StaticResource MT.4}"/>
            <UniformGrid Columns="4" Margin="{StaticResource MY.3}">
                
                <Border Background="{StaticResource Brush.Primary}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Primary" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="#0d6efd" Foreground="White" FontSize="11" Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Secondary}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Secondary" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="#6c757d" Foreground="White" FontSize="11" Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Success}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Success" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="#198754" Foreground="White" FontSize="11" Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Danger}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Danger" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="#dc3545" Foreground="White" FontSize="11" Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Warning}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Warning" Foreground="{StaticResource Brush.Dark}" FontWeight="Bold"/>
                        <TextBlock Text="#ffc107" Foreground="{StaticResource Brush.Dark}" FontSize="11" Opacity="0.8"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Info}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Info" Foreground="{StaticResource Brush.Dark}" FontWeight="Bold"/>
                        <TextBlock Text="#0dcaf0" Foreground="{StaticResource Brush.Dark}" FontSize="11" Opacity="0.8"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Light}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4"
                       BorderBrush="{StaticResource Brush.Gray.300}"
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Light" Foreground="{StaticResource Brush.Dark}" FontWeight="Bold"/>
                        <TextBlock Text="#f8f9fa" Foreground="{StaticResource Brush.Dark}" FontSize="11" Opacity="0.8"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{StaticResource Brush.Dark}" 
                       Padding="{StaticResource P.3}" 
                       Margin="{StaticResource M.2}"
                       CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="Dark" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="#212529" Foreground="White" FontSize="11" Opacity="0.9"/>
                    </StackPanel>
                </Border>
                
            </UniformGrid>
            
            <!-- Gray Scale -->
            <TextBlock Style="{StaticResource Text.H4}" Text="Gray Scale" Margin="{StaticResource MT.4}"/>
            <StackPanel Orientation="Horizontal" Margin="{StaticResource MY.3}">
                <Border Background="{StaticResource Brush.Gray.100}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.200}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="200" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.300}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="300" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.400}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="400" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.500}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="500" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.600}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="600" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.700}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="700" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.800}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="800" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
                <Border Background="{StaticResource Brush.Gray.900}" Width="80" Height="80" Margin="4">
                    <TextBlock Text="900" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                </Border>
            </StackPanel>
            
            <!-- Usage Examples -->
            <TextBlock Style="{StaticResource Text.H4}" Text="Usage Examples" Margin="{StaticResource MT.4}"/>
            <Border Background="{StaticResource Brush.Gray.100}" 
                   Padding="{StaticResource P.3}" 
                   Margin="{StaticResource MY.3}"
                   CornerRadius="4">
                <StackPanel>
                    <TextBlock FontFamily="Consolas" FontSize="12" xml:space="preserve"><![CDATA[<!-- In XAML -->
<Border Background="{StaticResource Brush.Primary}"/>
<TextBlock Foreground="{StaticResource Brush.Success}"/>

<!-- Resource Keys Available -->
Brush.Primary, Brush.Secondary, Brush.Success, Brush.Danger
Brush.Warning, Brush.Info, Brush.Light, Brush.Dark
Brush.Gray.100 through Brush.Gray.900
Brush.Blue.100 through Brush.Blue.900 (and similar for other colors)]]></TextBlock>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
</Page>
