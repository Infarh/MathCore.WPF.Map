<Page x:Class="MathCore.WPF.Map.TestWPF.Views.Bootstrap.TypographyDemo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Typography">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{StaticResource P.4}">
            
            <TextBlock Style="{StaticResource Text.H2}" Text="Typography"/>
            <TextBlock Style="{StaticResource Text.Muted}" 
                      Text="Text styles and formatting based on Bootstrap 5"
                      Margin="{StaticResource MB.4}"/>
            
            <!-- Headings -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Headings" Margin="{StaticResource MT.4}"/>
            
            <TextBlock Style="{StaticResource Text.H1}" Text="H1 Heading"/>
            <TextBlock Style="{StaticResource Text.H2}" Text="H2 Heading"/>
            <TextBlock Style="{StaticResource Text.H3}" Text="H3 Heading"/>
            <TextBlock Style="{StaticResource Text.H4}" Text="H4 Heading"/>
            <TextBlock Style="{StaticResource Text.H5}" Text="H5 Heading"/>
            <TextBlock Style="{StaticResource Text.H6}" Text="H6 Heading"/>
            
            <!-- Display Headings -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Display Headings" Margin="{StaticResource MT.5}"/>
            <TextBlock Style="{StaticResource Text.Muted}" 
                      Text="Larger, more impactful headings"
                      Margin="{StaticResource MB.3}"/>
            
            <TextBlock Style="{StaticResource Text.Display6}" Text="Display 6"/>
            <TextBlock Style="{StaticResource Text.Display5}" Text="Display 5"/>
            <TextBlock Style="{StaticResource Text.Display4}" Text="Display 4"/>
            
            <!-- Paragraphs -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Paragraphs" Margin="{StaticResource MT.5}"/>
            
            <TextBlock Style="{StaticResource Text.Lead}" Margin="{StaticResource MY.2}">
                This is a lead paragraph. It stands out from regular paragraphs with larger text size and lighter weight.
            </TextBlock>
            
            <TextBlock Style="{StaticResource Text.Body}" Margin="{StaticResource MY.2}">
                This is a regular body paragraph. It uses the base font size and provides comfortable reading experience for longer content.
            </TextBlock>
            
            <TextBlock Style="{StaticResource Text.Small}" Margin="{StaticResource MY.2}">
                This is small text. Useful for footnotes, captions, or secondary information.
            </TextBlock>
            
            <!-- Text Colors -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Text Colors" Margin="{StaticResource MT.5}"/>
            
            <StackPanel Margin="{StaticResource MY.3}">
                <TextBlock Style="{StaticResource Text.Primary}" Text="Primary text"/>
                <TextBlock Style="{StaticResource Text.Secondary}" Text="Secondary text"/>
                <TextBlock Style="{StaticResource Text.Success}" Text="Success text"/>
                <TextBlock Style="{StaticResource Text.Danger}" Text="Danger text"/>
                <TextBlock Style="{StaticResource Text.Warning}" Text="Warning text"/>
                <TextBlock Style="{StaticResource Text.Info}" Text="Info text"/>
                <TextBlock Style="{StaticResource Text.Muted}" Text="Muted text"/>
            </StackPanel>
            
            <!-- Text Alignment -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Text Alignment" Margin="{StaticResource MT.5}"/>
            
            <Border BorderBrush="{StaticResource Brush.Gray.300}" BorderThickness="1" Padding="{StaticResource P.3}" Margin="{StaticResource MY.3}">
                <StackPanel>
                    <TextBlock Style="{StaticResource Text.Left}" Text="Left aligned text" Margin="{StaticResource MB.2}"/>
                    <TextBlock Style="{StaticResource Text.Center}" Text="Center aligned text" Margin="{StaticResource MB.2}"/>
                    <TextBlock Style="{StaticResource Text.Right}" Text="Right aligned text"/>
                </StackPanel>
            </Border>
            
            <!-- Font Weights -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Font Weights" Margin="{StaticResource MT.5}"/>
            
            <StackPanel Margin="{StaticResource MY.3}">
                <TextBlock Style="{StaticResource Text.Light.Weight}" Text="Light weight text"/>
                <TextBlock Style="{StaticResource Text.Normal}" Text="Normal weight text"/>
                <TextBlock Style="{StaticResource Text.SemiBold}" Text="SemiBold weight text"/>
                <TextBlock Style="{StaticResource Text.Bold}" Text="Bold weight text"/>
                <TextBlock Style="{StaticResource Text.Italic}" Text="Italic text"/>
            </StackPanel>
            
            <!-- Text Decorations -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Text Decorations" Margin="{StaticResource MT.5}"/>
            
            <StackPanel Margin="{StaticResource MY.3}">
                <TextBlock Style="{StaticResource Text.Underline}" Text="Underlined text"/>
                <TextBlock Style="{StaticResource Text.Strikethrough}" Text="Strikethrough text"/>
            </StackPanel>
            
            <!-- Monospace -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Monospace" Margin="{StaticResource MT.5}"/>
            
            <TextBlock Style="{StaticResource Text.Monospace}" Margin="{StaticResource MY.3}">
                This is monospace text, useful for code snippets or technical content.
            </TextBlock>
            
            <!-- BlockQuote -->
            <TextBlock Style="{StaticResource Text.H3}" Text="BlockQuote" Margin="{StaticResource MT.5}"/>
            
            <Border Style="{StaticResource Text.BlockQuote}" Margin="{StaticResource MY.3}">
                <StackPanel>
                    <TextBlock FontSize="20" TextWrapping="Wrap">
                        A well-known quote, contained in a blockquote element.
                    </TextBlock>
                    <TextBlock Style="{StaticResource Text.Muted}" Margin="{StaticResource MT.2}">
                        - Someone famous in Source Title
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Usage Examples -->
            <TextBlock Style="{StaticResource Text.H3}" Text="Usage Examples" Margin="{StaticResource MT.5}"/>
            <Border Background="{StaticResource Brush.Gray.100}" 
                   Padding="{StaticResource P.3}" 
                   Margin="{StaticResource MY.3}"
                   CornerRadius="4">
                <TextBlock FontFamily="Consolas" FontSize="12" xml:space="preserve"><![CDATA[<!-- Headings -->
<TextBlock Style="{StaticResource Text.H1}" Text="Heading 1"/>
<TextBlock Style="{StaticResource Text.Display4}" Text="Display 4"/>

<!-- Paragraphs -->
<TextBlock Style="{StaticResource Text.Lead}" Text="Lead paragraph"/>
<TextBlock Style="{StaticResource Text.Body}" Text="Body text"/>

<!-- Colored Text -->
<TextBlock Style="{StaticResource Text.Primary}" Text="Primary"/>
<TextBlock Style="{StaticResource Text.Danger}" Text="Danger"/>

<!-- Font Weights -->
<TextBlock Style="{StaticResource Text.Bold}" Text="Bold"/>
<TextBlock Style="{StaticResource Text.Italic}" Text="Italic"/>]]></TextBlock>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
</Page>
